@model List<ranglerz_project.Models.TransactionAccount>
@{
    ViewBag.Title = "purchaseReportPost";
    var sesion = Session["name"].ToString();
    int result1;
    int result2;
    float clientWeight = 0;
    float originalweight = 0;
    float difference = 0;
    var balance = ViewBag.openingBalance;

    int salesReportsEdit = Convert.ToInt32(Session["purchase_reports_edit"]);



}



<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Asian Industry | View User </title>

    <!-- Bootstrap core CSS -->

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/fonts/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/css/animate.min.css" rel="stylesheet">

    <!-- Custom styling plus plugins -->
    <link href="~/Content/css/custom.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/css/jquery-jvectormap-2.0.1.css" />
    <link href="~/Content/css/green.css" rel="stylesheet" />
    <link href="~/Content/css/floatexamples.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/css/chosen.css" media="all" />


    <script src="~/Scripts/js/jquery.min.js"></script>


    <script src="~/Scripts/jquery-1.8.3.min.js"></script>
    <script src="~/Scripts/chosen.jquery.min.js"></script>



    <script>
        //* enchanced select
        chosen_select = {
            init: function () {
                $(".chzn-select").chosen();
            }
        };

        $(document).ready(function () {
            // extended select elements
            chosen_select.init();
        });
    </script>








</head>




<body class="nav-md">

    <div class="container body">


        <div class="main_container">

            @{
                Html.RenderPartial("_Partial");
            }

            <!-- top navigation -->
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>
                                Purchase Reports
                            </h3>
                        </div>


                    </div>
                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="x_content">
                            <br />
                            <form id="demo-form2" action="@Url.Action("purchaseReportPost", "SaleVoucher")" method="post" data-parsley-validate class="form-horizontal form-label-left">

                                <div class="form-group">

                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select name="search" required class="form-control chzn-select col-md-7 col-xs-12">
                                            <option value="">Please select any </option>
                                            @foreach (var tr in ViewBag.Mylist)
                                            {
                                                <option value="@tr.name">@tr.MainAccount.name -> @tr.name </option>
                                            }


                                        </select>
                                        <input type="date" id="dateDefault" name="dateStart" required />
                                        <input type="date" id="dateDefault2" name="dateEnd" required />
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xs-12">

                                        <input type="submit" value="Search" class="btn btn-success" />
                                    </div>
                                </div>
                                <div class="ln_solid"></div>


                            </form>




                        </div>

                    </div>

                    <div class="row">

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2><strong>View Reports:</strong>@ViewBag.search &nbsp;&nbsp;&nbsp;<strong>Opening Balance(Rs.):</strong>@ViewBag.openingBalance</h2>

                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <table id="example" class="table table-striped responsive-utilities jambo_table">
                                        <thead>
                                            <tr class="headings">

                                                @if (sesion == "Admin")
                                                {
                                                    <th>User Name</th>
                                                }

                                                <th>Date </th>
                                                <th>Type </th>
                                                <th>Code </th>
                                                <th>Description </th>

                                                <th>GRN </th>
                                                <th>Truck </th>
                                                <th>Deduction </th>
                                                <th>Item</th>

                                         
                                                <th>Factory Weight</th>
                                                <th>Action</th>

                                            </tr>
                                        </thead>

                                        <tbody>

                                            @foreach (var v in Model)
                                            {
                                                foreach (var t in v.Transactions.Where(x=>x.voucher_type=="PV").OrderBy(x => x.created_at).ToList())
                                                {
                                                    

                                                    result1 = DateTime.Compare(ViewBag.start, t.created_at);
                                                    result2 = DateTime.Compare(ViewBag.end, t.created_at);


                                                    if (result1 < 0 || result1 == 0)
                                                    {

                                                        if (result2 != -1)
                                                        {
                                                            <tr class="even pointer">

                                                                @if (sesion == "Admin")
                                                                {
                                                                    if (t.User != null)
                                                                    {
                                                                        <td>@t.User.name</td>
                                                                    }
                                                                    else if (@t.Admin != null)
                                                                    {
                                                                        <td>@t.Admin.username</td>
                                                                    }
                                                                }
                                                                <td>@t.created_at.ToShortDateString()</td>




                                                                <td>@t.voucher_type</td>
                                                                <td>@t.voucher_code</td>
                                                                <td>@t.description <strong> From :</strong>  @t.from_account <strong>To :</strong>   @t.to_account </td>


                                                                <td>@t.grn</td>
                                                                <td>@t.truck</td>
                                                                @{

                                                                if (t.cr > 0)
                                                                {
                                                                    balance = balance + t.cr;
                                                                }

                                                                else
                                                                {
                                                                    balance = balance - t.dr;
                                                                }



                                                                //   var tt = Convert.ToInt64(t.balance);
                                                                //var balance = String.Format("{0:#,##0.00}", tt);
                                                                }
                                                                <td> @t.deduction</td>
                                                                <td> @t.good_</td>
                                                       
                                                                <td>@t.quantity</td>
                                                                @{
                                                                if (t.client_s_weight != null)
                                                                {
                                                                    clientWeight = (float)(clientWeight + t.client_s_weight);
                                                                }
                                                                originalweight = (float)(originalweight + t.net_weight);
                                                                }

                                                                <td>

                                                                    @if (salesReportsEdit == 1)
                                                                    {

                                                                        <a href="@Url.Action("Edit","SaleVoucher" , new {id= @t.Id} )">Edit</a>

                                                                    }
                                                                </td>





                                                            </tr>
                                                        }
                                                    }
                                                }

                                            }


                                        </tbody>

                                    </table>
                                    @{
                                        difference = originalweight - clientWeight;
                                    }
                                    <p><strong>Client Weight :</strong>  @clientWeight</p>
                                    <p><strong>Total Factory Weight :</strong> @originalweight</p>
                                    <p><strong>Difference :</strong> @difference</p>

                                </div>
                            </div>
                        </div>

                        <br />
                        <br />
                        <br />

                    </div>
                </div>

            </div>
            <!-- /page content -->
        </div>

    </div>
